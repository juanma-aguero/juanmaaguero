        <div class="btn-group record_actions">

{%- if ('delete' in actions) and (not hide_delete) %}
            <button class="btn btn-link btn-sm" type="submit"> {{ "{{ 'Delete'|trans({}, '"~ entity ~"') }}" }}</button>
            <input name="modal" type="hidden" value="0">
            
{% endif %}
{% if ('edit' in actions) and (not hide_edit) and not show_edit_js%}
            <a class="btn btn-link  btn-sm" href="{{ "{{ path('"~ route_name_prefix ~"_edit', {id: "~ entity|lower ~".id}) }}" }}">
                {{ "{{ 'Edit'|trans({}, '"~ entity ~"') }}" }}
            </a>
{% endif -%}
{% if ('edit' in actions) and (not hide_edit) and show_edit_js %}
                <a class="btn btn-link  btn-sm" onclick="showEdit(true)">
                    {{ "{{ 'Edit'|trans({}, '"~ entity ~"') }}" }}
                </a>
{% endif -%}

        </div>
{% if ('delete' in actions) and (not hide_delete) %}
            <input name="modal" type="hidden" value="0">
        {{ '{{ form_end(delete_form) }}' }}
{% endif %}

{% if ('delete' in actions) and show_delete_popup %}
        <div id="delete_confirm" class="modal fade">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                        <h3>{{ "{{ 'Confirm delete'|trans({}, '"~ entity ~"') }}" }}</h3>
                    </div>
                    <div class="modal-body">
                        <p>{{ "{{ 'You are about to delete an item'|trans({}, '"~ entity ~"') }}" }}, {{ "{{ 'this procedure is irreversible'|trans({}, '"~ entity ~"') }}" }}.</p>
                        <p>{{ "{{ 'Do you want to proceed?'|trans({}, '"~ entity ~"') }}" }}</p>
                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-danger">{{ "{{ 'Yes'|trans({}, '"~ entity ~"') }}" }}</button>
                        <button class="btn btn-default" data-dismiss="modal">{{ "{{ 'No'|trans({}, '"~ entity ~"') }}" }}</button>
                    </div>
                </div>
            </div>
        </div>
{% endif %}
